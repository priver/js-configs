{
    "version": "independent",
    "npmClient": "yarn",
    "command": {
        "publish": {
            "allowBranch": "master",
            "conventionalCommits": true,
            "message": "release: publish"
        },
        "run": {
            "concurrency": 1,
            "stream": true
        }
    },
    "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md"
    ]
}
